# Environment Variables Configuration
# Copy this file to .env and customize the values for your environment
# Note: Spring Boot doesn't read .env files by default - these are for your reference
# You need to export these variables before running the application

# JWT Configuration
# REQUIRED: Must be at least 32 characters for security
JWT_SECRET=my-super-secret-jwt-key-with-at-least-32-characters-for-security
JWT_EXPIRATION=86400000

# Database Configuration
# REQUIRED: PostgreSQL connection details
DB_URL=jdbc:postgresql://localhost:5432/auth_db
DB_USERNAME=postgres
DB_PASSWORD=postgres

# Server Configuration
# Port where the application will run
SERVER_PORT=8080

# Mail Configuration (Optional - only needed for email features)
# Set MAIL_ENABLED=true to enable email functionality
MAIL_ENABLED=false
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@parkingshare.com

# Logging Configuration (Optional)
LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=WARN
SHOW_SQL=false
